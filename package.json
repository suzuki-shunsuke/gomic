{
  "scripts": {
    "test": "go test ./... -v -covermode=atomic",
    "setup": "npm i && dep ensure",
    "fmt": "bash scripts/fmt.sh",
    "vet": "go vet ./...",
    "lint": "golangci-lint run",
    "c": "bash scripts/coverage.sh",
    "tag": "bash scripts/tag.sh",
    "gen-example": "go run cmd/gomic/main.go gen -c examples/gomic.yml && npm run fmt",
    "gen-mock": "go run cmd/gomic/main.go gen && npm run fmt",
    "ci-local": "circleci build -e LOCAL=true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run vet && npm run lint && npm test",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "husky": "^1.1.3"
  }
}
